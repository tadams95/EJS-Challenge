<%- include("partials/header"); -%>

<h1>Compose</h1>

<!-- user input on compose page -->
<form action="/compose" method="post" class="item">

<div class="form-group">
<label for="postTitle">Title</label>
<textarea name="postTitle" id="Post" cols="100" rows="1" class="form-control"></textarea>
</div>

<div class="form-group">
<label for="postContent">Post</label>
<textarea name="postBody" id="postBody" cols="100" rows="5" autocomplete="off" class="form-control"></textarea>
</div>

<button type="submit" name="button" class="btn btn-primary">Publish</button>

</form>

<%- include("partials/footer"); -%>